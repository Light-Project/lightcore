/dts-v1/;
#include "sunxi/suniv.dtsi"

/ {
    model = "NeoPi-One";

    memory@80000000 {
        device_type = "memory";
        reg = <0x80000000 0x04000000>;
    };

    chosen {
        bootargs = "init=/sbin/init";
    };
};

&spi0 {
    status = "disabled";

    flash@0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "mxicy,mx25l1606e", "jedec,spi-nor";
        reg = <0>;
        spi-max-frequency = <40000000>;
    };
};
